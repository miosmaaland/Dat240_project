@page
@using SmaHauJenHoaVij.Pages.CustomerPages
@model CustomerProfileModel
@{
    ViewData["Title"] = "Customer Profile";
}

<h2>Customer Profile</h2>

<form method="post">
    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Customer.Name" />
        <span asp-validation-for="Customer.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="Phone" class="form-label">Phone</label>
        <input type="text" class="form-control" id="Phone" name="Phone" value="@Model.Customer.Phone" />
        <span asp-validation-for="Customer.Phone" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
